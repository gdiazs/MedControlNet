@model MedControlNet.Models.ConsultorioModelo

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-3">Editar consultorio</h2>


    
<div class="form-horizontal">
    <hr />
    @using (Html.BeginForm("Edit", "Consultorios", FormMethod.Post, new { @id = "formConsultorio" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ConsultorioID)

        <div class="form-group">
            @Html.LabelFor(model => model.NumeroConsultorio, "Número de consultorio", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.NumeroConsultorio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumeroConsultorio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mt-5">
            <h5>Especialidades del consultorio</h5>


            <div class="col-6 mt-3">
                <table class="table">
                    <thead class="table-primary">
                        <tr>
                            <th scope="col">Especialidad</th>
                            <th scope="col">Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.EspecialidadesConsultorio)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NombreEspecialidad)
                                </td>
                                <td>
                                    @Html.ActionLink("Eliminar", "EliminarEspecialidad", new { especialidadId = item.EspecialidadID, consultorioId = Model.ConsultorioID }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>


        </div>
    }



            @using (Html.BeginForm("AgregarEspecialidad", "Consultorios", FormMethod.Post, new { @id = "formAgregarEspecialidad" }))
            {
                <div class="row">
                    <div class="col-3">
                        @Html.HiddenFor(model => model.ConsultorioID)
                        @Html.DropDownList("NuevaEspecialidad", Model.TodasLasEspecialidades, new { @class = "form-select" })
                    </div>
                    <div class="col">
                        <input type="submit" value="Añadir" class="btn btn-primary" />
                    </div>
                </div>

            }






    <div class="form-group">
        <div class="col-md-offset-2 col-md-6 text-end mt-5">
            @Html.ActionLink("Regresar", "Index", new { }, new { @class = "btn btn-secondary" })
            <input type="submit" form="formConsultorio" value="Actualizar consultorio" class="btn btn-primary" />
        </div>
    </div>
</div>


<div>
   
</div>
